{
  "train_data_file": "data/SROIE2019/train/train.json",
  "test_data_file": "data/SROIE2019/test/test.json",
  "output_dir": "models/layoutlmv3-lora-invoice-number",
  "model_name": "microsoft/layoutlmv3-base",
  "max_length": 512,
  "label2id": {
    "O": 0,
    "B-INVOICE_ID": 1,
    "I-INVOICE_ID": 2
  },
  "id2label": {
    "0": "O",
    "1": "B-INVOICE_ID",
    "2": "I-INVOICE_ID"
  },
  "num_epochs": 20,
  "batch_size": 2,
  "gradient_accumulation_steps": 8,
  "learning_rate": 5e-05,
  "warmup_ratio": 0.1,
  "weight_decay": 0.01,
  "lora_r": 16,
  "lora_alpha": 32,
  "lora_dropout": 0.1,
  "lora_target_modules": [
    "query",
    "value",
    "output.dense",
    "intermediate.dense",
    "output.dense"
  ],
  "focal_alpha": 0.25,
  "focal_gamma": 2.0,
  "val_ratio": 0.15,
  "random_seed": 42
}
